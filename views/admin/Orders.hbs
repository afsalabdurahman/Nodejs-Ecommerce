<style>
    .body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 20px;
    }

    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        margin-bottom: 10px;
    }

    p {
        color: #888;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    thead {
        background-color: #f5f5f5;
    }

    th,
    td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        font-weight: 600;
    }

    .status {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.9em;
        font-weight: bold;
        text-align: center;
    }

    .placed {
        background-color: #f0ad4e;
        color: white;
    }

    .paid {
        background-color: #5cb85c;
        color: white;
    }

    .detail-btn {
        background-color: #5bc0de;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
        cursor: pointer;
    }

    .detail-btn:hover {
        background-color: #31b0d5;
    }
</style>

<div class="body">
    <div class="container">
        <h1>Order List</h1>
        <p>Lorem ipsum dolor sit amet.</p>
        <table>
            <thead>
                <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Product Name</th>
                    <th>Total</th>
                    <th>Order Status</th>
                    <th>Payment Status</th>
                    <th>Order Placed Date</th>
                    <th>Change Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each Data}}
                <tr>
                    <td>OrderID#1006</td>
                    <td>{{user.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{ProductId.name}}</td>
                    <td>â‚¹{{ProductId.price}}</td>
                    {{#ifEquals orderStatus "Cancelled"}}
                    <td><span style="color: red;" class="status ">Order Cancelled</span></td>
                    {{else}}
                    <td><span class="status placed">Order Placed</span></td>
                    {{/ifEquals}}
                    <td><span class="status paid">COD</span></td>
                    <td>{{Date}}</td>
                    <td><a href="/admin/orderdetails?id={{_id}}"><button class="detail-btn">Detail</button></td></a>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>