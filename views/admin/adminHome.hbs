                        <button>Unblock</button>
                    </li>
                </ul>
            </div>
            <div class="recent-activity animate-in">
                <h3>Recent Activity</h3>
                <ul>
                    <li>
                        <p>Today 12:16 pm</p>
                        <p>Andrei Coman magna sed porta finibus, risus posted a new article: Designer Alex</p>
                    </li>
                    <li>
                        <p>22 Jul 2020 12:16 pm</p>
                        <p>Andrei Coman posted a new article: Designer Alex</p>
                    </li>
                    <li>
                        <p>18 Jul 2020 07:45 am</p>
                        <p>Andrei Coman started a new job: Designer Alex</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        const monthlyData = [0, 0, 1000, 5000, 8000, 19000];
        const yearlyData = [0, 10000, 19000];
        let month = "{{ Month }}"
        let total = '{{Total}}'
        let year = "{{Year}}"

        let totalArray = total.split(',')


        const ctx = document.getElementById('salesChart').getContext('2d');

        // Define monthly and yearly data


        totalArray.map((e) => {
            monthlyData.push(e)
            yearlyData.push(e)
        })
        console.log(monthlyData, "data monthly")

        // Define monthly and yearly labels
        const monthLabels = ['March', 'April', 'May', 'June', 'July', 'Augest', 'September'];
        const yearLabels = ['2021', '2022', '2023', '2024',];

        // Function to create the chart
        let salesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: monthLabels, // Default to monthly labels
                datasets: [{
                    label: 'Sales',
                    data: monthlyData, // Default to monthly data
                    backgroundColor: 'rgba(74, 144, 226, 0.2)',
                    borderColor: 'rgba(74, 144, 226, 1)',
                    borderWidth: 2,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Add event listener for radio buttons
        document.querySelectorAll('input[name="salesToggle"]').forEach((radio) => {
            radio.addEventListener('change', function () {
                if (this.value === 'monthly') {
                    salesChart.data.labels = monthLabels; // Switch to month labels
                    salesChart.data.datasets[0].data = monthlyData; // Switch to monthly data
                } else if (this.value === 'yearly') {
                    salesChart.data.labels = yearLabels; // Switch to year labels
                    salesChart.data.datasets[0].data = yearlyData; // Switch to yearly data
                }
                salesChart.update(); // Update the chart with new data and labels
            });
        });

        // GSAP animations
        gsap.from(".stat", {
            duration: 0.8,
            y: 50,
            opacity: 0,
            stagger: 0.2,
            ease: "power3.out"
        });

        gsap.from(".chart-container, .products, .new-members, .recent-activity", {
            duration: 1,
            y: 50,
            opacity: 0,
            stagger: 0.3,
            ease: "power3.out",
            delay: 0.5
        });

    </script>
</body>

</html>