
<script   type="text/javascript" src="/js/addcategory.js"></script>
<link rel="stylesheet" href="/assets/admin/listcate.css">
   <div class="container">
        <h1>Category List</h1>
        <p>Lorem ipsum dolor sit amet.</p>
        <div class="actions">
            <button class="btn">Export</button>
            <button class="btn">Import</button>
            <button class="btn primary">Create new</button>
        </div>
        <div class="filter-section">
            <input type="text" placeholder="Search for products..." id="searchInput">
            <select id="status">
                <option value="" selected>All</option>
                <option value="listed">Listed</option>
                <option value="unlisted">Unlisted</option>
            </select>
            <button class="btn filter">Filter</button>
        </div>
        <table id="category">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each categorydata}}
                <tr>
                    <td>

                        
                        <div class="category-info">
                            {{!-- <img src="/upload/{{this.image}}" alt="Category Image"> --}}
                            <div>
                                <p class="category-name">{{this.name}}</p>
                                {{!-- <p class="category-subtext">{{name}}</p> --}}
                            </div>
                        </div>
                    </td>
                    <td>
                        {{!-- {{this.description}} --}}
                    </td>
                    <td>
                        {{!-- <span class="status listed">{{this.is_listed}}</span> --}}
                    </td>
                    <td>
                        <button class="btn action unlist" onclick="showModal()">Unlist</button>
                        <button class="btn action edit">Edit</button>
                    </td>
                </tr>
                {{/each}}
            
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div id="confirmationModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <p>Are you sure?</p>
            <p>Please confirm to block this product!</p>
            <button class="btn confirm" onclick="confirmAction()">Yes, delete it!</button>
            <button class="btn cancel" onclick="closeModal()">Cancel</button>
        </div>
    </div>
