    </div>
</div>
<script>
    function approve() {
        a = document.getElementById('approve').innerHTML = "Approved"
        console.log(a)

        document.getElementById('approve').style.backgroundColor = "green"
    }
    function Cancel(b) {
        Swal.fire({
            title: "Do you want to Cancel this Order?",
            showDenyButton: true,

            confirmButtonText: "Yes",
            denyButtonText: `No`
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Cancelled!",
                    text: "Order has been cancelled.",
                    icon: "success"
                });
                window.location.href = `/admin/cancel-order?id=${b}`;
            } else if (result.isDenied) {
                Swal.fire("Changes are not saved", "", "info");
            }
        });


    }
    function Shipped(ship) {
        Swal.fire({
            title: "Do you want to Ship this Order?",
            showDenyButton: true,

            confirmButtonText: "Yes",
            denyButtonText: `No`
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                Swal.fire({
                    title: "shipped!",
                    text: "Order has been shipped.",
                    icon: "success"
                });
                window.location.href = `/admin/shipped-order?id=${ship}`;
            } else if (result.isDenied) {
                Swal.fire("Changes are not saved", "", "info");
            }
        });

    }
</script>