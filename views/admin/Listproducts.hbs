<style>
  /* General styles */
  .body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f4;
    color: #333;
  }

  /* Table styles */
  .product-table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .product-table th {
    background-color: #4a90e2;
    color: white;
    padding: 12px;
    text-align: left;
  }

  .product-table td {
    padding: 12px;
    border-bottom: 1px solid #e0e0e0;
  }

  /* Product image */
  .product-image {
    width: 50px;
    height: 50px;
    object-fit: cover;
    margin-right: 10px;
  }

  /* Status styles */
  .status {
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.9em;
  }

  .status.active {
    background-color: #4CAF50;
    color: white;
  }

  /* Button styles */
  button {
    padding: 8px 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9em;
    transition: background-color 0.3s;
  }

  .edit-button {
    background-color: #4a90e2;
    color: white;
  }

  .delete-button {
    background-color: #e74c3c;
    color: white;
  }

  .undelete-button {
    background-color: #2ecc71;
    color: white;
  }

  .visible-button,
  .unvisible-button {
    background-color: #f39c12;
    color: white;
  }

  button:hover {
    opacity: 0.8;
  }

  /* Modal styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 5px;
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }

  .btn {
    padding: 10px 20px;
    margin: 10px 5px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .btn.confirm {
    background-color: #4CAF50;
    color: white;
  }

  .btn.cancel {
    background-color: #f44336;
    color: white;
  }
</style>


