            {{#if productvalue.isVisible}}
            <div class=" zoom-img">
              <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit"
                src="/upload/{{productvalue.image.[0]}}" />
            </div>
            {{else}}
            <img style="max-width: 100%; max-height: 100vh; margin: auto; filter:grayscale(100%)" class="rounded-4 fit"
              src="/upload/{{productvalue.image.[0]}}" />
            <h1>Not in Stock </h1>
            <p style="margin-left: 80%; color:red">Notify Me</p>
            {{/if}}
          </a>
        </div>

        <div class="d-flex justify-content-center mb-3">
          {{#each productvalue.image}}
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2 zoom-img1" target="_blank" data-type="image"
            href="#" class="item-thumb">
            <img width="60" height="60" class="rounded-2" src="/upload/{{this}}" />
          </a>
          {{/each}}
        </div>
        <!-- thumbs-wrap.// -->
        <!-- gallery-wrap .end// -->
      </aside>
      {{#if productvalue.isVisible}}
      <main class="col-lg-6">
        <div class="ps-lg-3">
          <h4 class="title text-dark" id="productName">
            {{productvalue.name}}
          </h4>
          <div class="d-flex flex-row my-3">
            <div class="text-warning mb-1 me-2">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
              <span class="ms-1">
                4.5
              </span>
            </div>
            <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i>{{productvalue.stock}}</span>
            <span class="text-success ms-2">In stock</span>
          </div>

          <div class="mb-3">
            {{#if offerPrice}}
            <span class="h5" id="price">₹{{offerPrice}}.00</span>
            {{else}}
            <span class="h5" id="price">₹{{productvalue.price}}.00</span>
            {{/if}}
            <span class="text-muted">/per box</span>
          </div>

          <p>
            {{productvalue.description}}. Modern look and quality demo item is a streetwear-inspired collection that
            continues
            to
            break
            away
            from
            the
            conventions of mainstream fashion. Made in Italy, these black and brown clothing low-top shirts for
            men.
          </p>

          <div class="row">
            <dt class="col-3">Type:</dt>
            <dd class="col-9">Regular</dd>

            <dt class="col-3">Color</dt>
            <dd class="col-9">Brown</dd>

            <dt class="col-3">Material</dt>
            <dd class="col-9">Cotton, Jeans</dd>

            <dt class="col-3">Brand</dt>
            <dd class="col-9">{{productvalue.brand}}</dd>
          </div>

          <hr />

          <div class="row mb-4">
            <div class="col-md-4 col-6">
              <label class="mb-2">Size</label>
              <select id="size" class="form-select border border-secondary" style="height: 35px;">
                <option>Small</option>
                <option>Medium</option>
                <option>Large</option>
              </select>
            </div>
            <!-- col.// -->
            <div class="col-md-4 col-6 mb-3">
              <label class="mb-2 d-block">Quantity</label>
              <div class="input-group mb-3" style="width: 170px;">
                <button onclick="decreaseQuantity()" class="btn btn-white border border-secondary px-3" type="button"
                  id="button-addon1" data-mdb-ripple-color="dark">
                  <i class="fas fa-minus"></i>
                </button>
                <input style="pointer-events: none;" type="text" id="quantity-input"
                  class="form-control text-center border border-secondary" value="1"
                  aria-label="Example text with button addon" aria-describedby="button-addon1" />
                <button onclick="increaseQuantity({{productvalue.stock}})"
                  class="btn btn-white border border-secondary px-3" type="button" id="button-addon2"
                  data-mdb-ripple-color="dark">
                  <i class="fas fa-plus"></i>
                </button>
              </div>
            </div>
          </div>
          <p id="change" style="color: red;"></p>
          {{#if msg.message}}

          <p style="color: red;"> {{msg.message}}</p>
          <a href="/profile/cartitems" class="btn btn-success shadow-0"> Go to Cart </a>
          {{else}}
          <a onclick="buy('{{productvalue._id}}')" class="btn btn-warning shadow-0"> Buy now </a>
          {{/if}}
          <a href="#" class="btn btn-primary shadow-0"> <i class="me-1 fa fa-shopping-basket"></i> Add to cart </a>
          <a href="#" class="btn btn-light border border-secondary py-2 icon-hover px-3"> <i
              class="me-1 fa fa-heart fa-lg"></i> Save </a>
        </div>
      </main>
      {{else}}
      {{/if}}
    </div>
  </div>
</section>
